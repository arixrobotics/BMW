<?xml version="1.0"?>

<launch>

    <!-- run pointcloud_to_laserscan node -->
    <node pkg="pointcloud_to_laserscan" type="pointcloud_to_laserscan_node" name="pointcloud_to_laserscan">

        <remap from="cloud_in" to="prius/pc1_to_pc2/scan"/>
        <remap from="scan" to="prius/converted_center_laser_scan"/>
        <rosparam>
            target_frame: center_laser_link # Leave disabled to output scan in pointcloud frame
            transform_tolerance: 0.01
            min_height: -1.8    # sensor height is 1.8m above chasis frame 
            max_height: 0.0 

            angle_min: -3.142 
            angle_max: 3.142 
            angle_increment: 0.0087 # M_PI/360.0
            scan_time: 0.3333
            range_min: 2.0
            range_max: 45.0
            use_inf: true
            inf_epsilon: 1.0

            # Concurrency level, affects number of pointclouds queued for processing and number of threads used
            # 0 : Detect number of cores
            # 1 : Single threaded
            # 2->inf : Parallelism level
            concurrency_level: 1
        </rosparam>

    </node>

</launch>
		


